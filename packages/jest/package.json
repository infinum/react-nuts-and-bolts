{
	"name": "@infinum/jest",
	"version": "1.0.0",
	"description": "Set of util functions for easier jest setup that supports both server and browser environment.",
	"keywords": [
		"Jest"
	],
	"author": "Infinum JavaScript Team <hello@infinum.com>",
	"homepage": "https://github.com/infinum/react-nuts-and-bolts#readme",
	"license": "MIT",
	"main": "src/index.ts",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/infinum/react-nuts-and-bolts.git",
		"directory": "packages/jest"
	},
	"bugs": {
		"url": "https://github.com/infinum/react-nuts-and-bolts/issues"
	},
	"scripts": {
		"build": "tsup --format=esm,cjs --dts",
		"dev": "pnpm build:fast -- --watch",
		"clean": "rimraf dist .turbo",
		"typecheck": "tsc --noEmit",
		"build:fast": "tsup --format=esm,cjs",
		"prepack": "clean-package",
		"postpack": "clean-package restore"
	},
	"peerDependencies": {
		"jest": ">=29.0.0"
	},
	"devDependencies": {
		"clean-package": "2.1.1",
		"tsup": "~6.2.3",
		"typescript": "~4.8.4"
	},
	"dependencies": {
		"@swc/core": "~1.3.14",
		"@swc/jest": "~0.2.23",
		"jest-environment-jsdom": "~29.3.1"
	},
	"clean-package": "./clean-package.config.json",
	"tsup": {
		"clean": true,
		"target": "es2019",
		"splitting": false,
		"format": [
			"cjs",
			"esm"
		],
		"entry": [
			"src/index.ts",
			"src/environment.ts"
		]
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
