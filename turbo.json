{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/main",
	"pipeline": {
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build:fast": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build:fast"]
		},
		"dev": {
			"cache": false
		},
		"typecheck": {
			"cache": false,
			"dependsOn": ["^typecheck"]
		},
		"test": {
			"outputs": ["instrumented/**", "coverage/**", ".nyc_output/**"]
		},
		"test:watch": {
			"cache": false
		}
	},
	"globalDependencies": ["tsconfig.json"]
}
